{% import 'macro/zf-form.twig' as form %}
{% import 'macro/widget.twig' as widget %}
{% include "sections/header.twig" %}
	<div class="yui-b">
    {% include "sections/side_nav.twig" %}
  </div>
  <div class="yui-main">
      <div class="yui-b">
        <h2>{{ C.param('action').Name }}</h2>
        <p>Username is alternative for your account email. Or, you can treat it as nickname. You can use it to login</p>
        {{ form.begin({"method":"post", "action":"/json/common/profile/username", "id":"page-form"}) }}
          {{ form.info({
              "label" : "Current username",
              "value" : login_user.Username|default('[ Empty ]')
          }) }}
          {{ form.text({
              "name" : "Username",
              "label" : "New Username",
              "help" : "As your login Id, we will check if it is unique"
          }) }}
          {{ form.text({
              "name" : "Username2",
              "label" : "Re-type new Username",
              "help" : "Just because it is important"
          }) }}
          <dd>
            {{ form.submit({"input_only":true, "value":"Update my username"}) }}
          </dd>
        {{ form.end() }}
      </div>
  </div>
{% include "sections/footer.twig" %}