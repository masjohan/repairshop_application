{% import 'macro/zf-form.twig' as form %}
{% import 'macro/widget.twig' as widget %}
{% include "sections/header.twig" %}
	<div class="yui-b">
    {% include "sections/side_nav.twig" %}
  </div>
  <div class="yui-main">
      <div class="yui-b">
        <h2>{{ C.param('action').Name }}</h2>
        {{ form.begin({"method":"post", "action":"/json/common/profile/passwd", "id":"page-form"}) }}
          {{ form.password({
              "label" : "Current Password",
              "name" : "PasswordOld"
          }) }}
          {{ form.password({
              "name" : "PasswordNew",
              "label" : "New Password",
              "help" : "As your login Id, we will check if it is unique"
          }) }}
          {{ form.password({
              "name" : "PasswordNew2",
              "label" : "Re-type new Password",
              "help" : "Just because it is important"
          }) }}
          <dd>
            {{ form.submit({"input_only":true, "value":"Update my email"}) }}
          </dd>
        {{ form.end() }}
      </div>
  </div>
{% include "sections/footer.twig" %}