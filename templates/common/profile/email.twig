{% import 'macro/zf-form.twig' as form %}
{% import 'macro/widget.twig' as widget %}
{% include "sections/header.twig" %}
	<div class="yui-b">
    {% include "sections/side_nav.twig" %}
  </div>
  <div class="yui-main">
      <div class="yui-b">
        <h2>{{ C.param('action').Name }}</h2>
        <p>Your profile email is extremely important since:
          <ul>
            <li>Served as your login Id</li>
            <li>Used for get back your password</li>
            <li>Some important notice.</li>
          </ul>
        </p>
        {{ form.begin({"method":"post", "action":"/json/common/profile/email", "id":"page-form"}) }}
          {{ form.info({
              "label" : "Current email",
              "value" : login_user.Email
          }) }}
          {{ form.text({
              "name" : "Email",
              "label" : "New email",
              "help" : "As your login Id, we will check if it is unique"
          }) }}
          {{ form.text({
              "name" : "Email2",
              "label" : "Re-type new email",
              "help" : "Just because it is important"
          }) }}
          <dd>
            {{ form.submit({"input_only":true, "value":"Update my email"}) }}
          </dd>
        {{ form.end() }}
      </div>
  </div>
{% include "sections/footer.twig" %}