{% import 'macro/zf-form.twig' as form -%}
{% import 'macro/widget.twig' as widget -%}
{{ C.loadJS('util/country-region.js') -}}
{% include "sections/header.twig" -%}
	<div class="yui-b">
    {% include "sections/side_nav.twig" %}
  </div>
  <div class="yui-main">
    <div class="yui-b">
        <h3>{{ C.param('action').Name }}</h3>
        <table id="conf-inline-edit">
        <tr>
          <th>Parameter</th>
          <th>Description</th>
          <th>Default value</th>
          <th>Custom value</th>
          <th></th>
        </tr>
        {% for v in setting %}
        <tr valign="top">
          <td>{{ v.Name }}</td>
          <td>{{ v.Memo }}</td>
          <td>{{ v.SysVal }}</td>
          <td class="conf-usr-val" data-field="{{ v.Name }}">{{ v.UsrVal }}</td>
          <td><span class="fake-link" data-id="{{v.Id}}">Edit</span></td>
        </tr>
        {% endfor %}
      </table>
    </div>
  </div>
{% include "sections/footer.twig" %}