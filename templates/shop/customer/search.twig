{% import 'macro/widget.twig' as widget -%}
{% include "sections/header.twig" %}
	<div class="yui-b">
        {% include "sections/side_nav.twig" %}
    </div>
    <div class="yui-main">
        <div class="yui-b">
            <h2>{{ C.param('action').Name }}</h2>
            <table>
	            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Token*</th>
                <th>Is Active</th>
                <th>Full name</th>
                <th>Phone</th>
                <th>Select</th>
	            </tr>
	            {% for v in cusUser %}
	            <tr valign="top">
                <td>{{ v.Username }}</td>
                <td>{{ v.Email }}</td>
                <td>{{ widget.token_link(v, server.SCRIPT_NAME) }}</td>
                <td>{{ v.IsActive ? "Yes" : "No" }}</td>
                <td>{{ v.FullName }}</td>
                <td>{{ v.Phone }}</td>
                <td><a href="{{ ('/shop/customer/search?select_id=' ~ v.Id) | php('sign') }}">Select</a></td>
	            {% else %}
	              <td colspan="7">Empty.</td>
	            {% endfor %}
	            </tr>
            </table>
        </div>
    </div>
{% include "sections/footer.twig" %}