{% include "sections/header.twig" %}
<div class="yui-b">
  {% include "sections/side_nav.twig" %}
</div>
<div class="yui-main">
  <div class="yui-b">
    <h2>{{ C.param('action').Name }}</h2>
    <table id="calendar-resource-edit">
      <tr>
        <th></th>
        <th>Name</th>
      </tr>
      {% for v in resources %}
      <tr valign="top">
        <td><span class="fake-link" data-id="{{v.Id}}">Edit</span><span> | </span><span class="fake-link" data-id="{{v.Id}}">Delete</span></td>
        <td data-field="Name">{{ v.Name }}</td>
      </tr>
      {% if loop.last and loop.index <6 %}
      <tr valign="top">
        <td><span class="fake-link">New</span></td>
        <td data-field="Name"></td>
      </tr>
      {% endif %}
      {% else %}
        <tr><td colspan="2">Empty.</td></tr>
      {% endfor %}
    </table>
    <ul>
      <li>Resource is targeting for the bay in your shop</li>
      <li>6 has been set as max number.Feel free to contact us if this does not fit your case.</li>
      <li>Deleting resource would delete all calendar associated to it. Think twice!</li>
    </ul>
  </div>
</div>
{% include "sections/footer.twig" %}