{% import 'macro/zf-form.twig' as form -%}
{% import 'macro/widget.twig' as widget -%}
{% include "sections/header.twig" %}
  <div class="yui-b">
    {% include "sections/side_nav.twig" %}
  </div>
  <div class="yui-main">
    <div class="yui-b">
      <h2>{{ C.param('action').Name }}</h2>
      <div id="main-conent"></div>
    </div>
  </div>
  <div class="calendar-pop hide">
    <span class="popover-close float-right fake-link">X</span>
    <h3></h3>
    {{ form.begin({"method":"post", "action":"/json/shop/calendar", "id":"calendar-add-form", "columnar": 3}) }}
    {{ form.text({
      "name" : "FirstName",
      "label" : "First Name",
      "required": true
    }) }}
    {{ form.text({
      "name" : "LastName",
      "label" : "Last Name",
      "required": true
    }) }}
    {{ form.text({
      "name" : "Phone",
      "label" : "Phone",
      "required": true
    }) }}
    {{ form.textarea({
        "name" : "Notes",
        "label" : "Notes",
        "colspan": 3
    }) }}
    {{ form.select({
        "name" : "FromSlot",
        "label" : "Start time slot",
        "first_blank": "Choose",
        "required": true
    }) }}
    {{ form.select({
        "name" : "EndSlot",
        "label" : "End time slot",
        "first_blank": "Choose"
    }) }}
    {{ form.holder({}) }}
    {{ form.submit({"input_only":true, "value":"Save"}) }}
    {{ form.button({"input_only":true, "value":"Delete", "id":"cal-delete"}) }}
    {{ form.button({"input_only":true, "value":"Move", "id":"cal-move"}) }}
    <input type="hidden" name="EventId" value="" />
    <input type="hidden" name="ResourceId" value="" />
  {{ form.end() }}
  </div>
{% include "sections/footer.twig" %}