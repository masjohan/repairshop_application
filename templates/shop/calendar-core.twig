{#
      <div class="phpc-month-nav">
        <a href="{{ (server.SCRIPT_NAME~'?y='~(year-1)~'&m='~month) | php('sign') }}">prev year</a>
        {% for i, m in ["Jan","Feb","Mar","Apr","May","Jun","Jul","Aug","Sep","Oct","Nov","Dec"] %}
            <a href="{{ (server.SCRIPT_NAME~'?y='~year~'&m='~(i+1)) | php('sign') }}" class="{%
              if year==now_year and (i+1) == now_month -%}
                phpc-present
            {%- endif %} {% if (i+1) == month -%}
                phpc-thismonth
            {%- endif%}">{{m}}</a>
        {% endfor %}
        <a href="{{ (server.SCRIPT_NAME~'?y='~(year+1)~'&m='~month) | php('sign') }}">next year</a>
      </div>#}
<caption>
  <span data-m="{{prev_month}}" data-y="{{prev_year}}" class="float-left fake-link calendar-nav">&lt;&lt;</span>
  {{title_month}}
  <span data-m="{{next_month}}" data-y="{{next_year}}" class="float-right fake-link calendar-nav">&gt;&gt;</span>
</caption>
<thead>
  <tr>
    <th>Sunday</th>
    <th>Monday</th>
    <th>Tuesday</th>
    <th>Wednesday</th>
    <th>Thursday</th>
    <th>Friday</th>
    <th>Saturday</th>
  </tr>
</thead>
<tbody>
  {% set dd = 1 %}
  {% for i in 1..month_week_span %}
    <tr>
    {% for j in 0..6 %}
      <td>
        {%- if (i==1 and j >= (month_first_wkday % 7)) or (i==month_week_span and j <= (month_last_wkday % 7)) or (i!=1 and i!=month_week_span) %}
          <div class="phpc-date fake-link" id="date-{{year~'-'~month~'-'~dd}}">{{dd}}</div>
          {% set dd = dd + 1 %}
          <ul class="day-calendar"></ul>
        {% endif -%}
      </td>
    {% endfor %}
    </tr>
  {% endfor %}
</tbody>
