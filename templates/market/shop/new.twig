{% import 'macro/zf-form.twig' as form -%}
{% import 'macro/widget.twig' as widget -%}
{% include "sections/header.twig" %}
	<div class="yui-b">
    {% include "sections/side_nav.twig" %}
  </div>
  <div class="yui-main">
    <div class="yui-b">
      <h2>{{ C.param('action').Name }}</h2>
      <p class="form-blurb">Only absolutely basic infomatin. After success, "Run as shop owner" to complete it.</p>
      {{ form.begin({"method":"post", "action":"/json/customer/new", "id":"market-shop-form"}) }}
				{{ form.text({
          "name" : "Name",
          "label" : "Company name",
          "push_label" : 1
				}) }}
				{{ form.text({
          "name" : "Email",
          "label" : "Owner account email",
          "help" : "It is for owner login; NOT for shop contact",
				}) }}
				<dd>
  			{{ form.submit({"input_only":true, "value":"Start a new shop"}) }}
				</dd>
        {{ form.end() }}
        <p class="hide success">You should pass the following link to the shop owner and allow themself to activate
          their account<br/><br/>
          This process can be automated once we have stable email service. So far write it down<br/><br/>
          <b class="link"></b>
        </p>
    </div>
  </div>
{% include "sections/footer.twig" %}